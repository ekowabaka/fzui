<!DOCTYPE html>
<html>
    <head>
        <title>FZUI Samples</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="dist/fzui.css" />
        <style>
            .pallete{
                display: inline-block;
                width: 170px;
                text-align: center;
                font-weight: bold;
                border-radius: 5px;
            }

            .pallete > div {
                height: 50px;
                line-height: 50px;
                font-weight: normal;
                color: #fff;
            }

            .pallete > div:first-child {
                border-radius: 7px 7px 0px 0px;
            }
            .pallete > div:nth-last-child(2) {
                border-radius: 0px 0px 7px 7px;
            }

            .pallete > div:only-child {
                border-radius: 7px;
            }
        </style>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <script src="dist/fzui.js"></script>
        <script type="text/javascript">
            function getColor(id){
                var rgb = getComputedStyle(document.getElementById(id)).backgroundColor.split(',');
                var output = '#';
                output += parseInt(rgb[0].substring(4)).toString(16);
                output += parseInt(rgb[1]).toString(16);
                output += parseInt(rgb[2]).toString(16);
                return output;
            }
        </script>
    </head>
    <body>
        <h1>FZUI!</h1>
        <h2>Colour Pallete</h2>
        <div>
            <h3>Colors</h3>
            {{#colors}}
            <div class="pallete">
                <div class="light-{{name}}-bg" id="light-{{name}}"><script type="text/javascript">document.write(getColor('light-{{name}}'))</script></div>
                <div class="{{name}}-bg" id="normal-{{name}}"><script type="text/javascript">document.write(getColor('normal-{{name}}'))</script></div>
                <div class="dark-{{name}}-bg" id="dark-{{name}}"><script type="text/javascript">document.write(getColor('dark-{{name}}'))</script></div>
                <span>{{name}}</span>
            </div>
            {{/colors}}   
        </div>
        <div>
            <h3>Grayscales</h3>
            <div class="pallete">
                <div class="gray-0-bg" id="gray-0"><script type="text/javascript">document.write(getColor('gray-0'))</script></div>
            </div>        
            <div class="pallete">
                <div class="gray-1-bg" id="gray-1"><script type="text/javascript">document.write(getColor('gray-1'))</script></div>
            </div>        
            <div class="pallete">
                <div class="gray-2-bg" id="gray-2"><script type="text/javascript">document.write(getColor('gray-2'))</script></div>
            </div>        
            <div class="pallete">
                <div class="gray-3-bg" id="gray-3"><script type="text/javascript">document.write(getColor('gray-3'))</script></div>
            </div>        
            <div class="pallete">
                <div class="gray-4-bg" id="gray-4"><script type="text/javascript">document.write(getColor('gray-4'))</script></div>
            </div>        
            <div class="pallete">
                <div class="gray-5-bg" id="gray-5"><script type="text/javascript">document.write(getColor('gray-5'))</script></div>
            </div>        
        </div>
        <h2>Buttons</h2>
        <button>Default</button>
        <button class='button-red'>Red</button>
        <button class='button-yellow'>Yellow</button>
        <button class='button-blue'>Blue</button>
        <button class='button-green'>Green</button>
        <button class='button-brown'>Brown</button>
        <button class='button-purple'>Purple</button>

        <h2>Dropdown</h2>
        <div class="dropdown">
            <button>Dropdown</button>
            <div class="dropdown-contents">
                Hello!
            </div>
        </div>

        <div class="dropdown">
            <button class="button-red" >Red</button>
            <ul class="dropdown-contents menu">
                <li>Some Item</li>
                <li>Another Item</li>
            </li>
        </div>
    </body>
</html>
