<!DOCTYPE html>
<html>
    <head>
        <title>FZUI Samples</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="build/fzui.css" />
        <style>
            body{
                width:80%;
                margin-left:auto;
                margin-right:auto;
            }

            h1, h2, h3{
                margin-bottom:5px;
            }

            .section{
                font-size:0;
            }

            .section > .half{
                vertical-align: top;
                width:50%;
                display: inline-block;
                font-size: initial;
                box-sizing: border-box;
            }

            .section > .half:first-child{
                padding-right:5px;
            }
            .section > .half:last-child{
                padding-left:5px;
            }

            .pallete{
                display: inline-block;
                width: 16%;
                text-align: center;
                font-weight: bold;
                border-radius: 5px;
                box-sizing: border-box;
            }

            .pallete > div {
                height: 50px;
                line-height: 50px;
                font-weight: normal;
                color: #fff;
            }

            .pallete > div:first-child {
                border-radius: 7px 7px 0px 0px;
            }
            .pallete > div:nth-last-child(2) {
                border-radius: 0px 0px 7px 7px;
            }

            .pallete > div:only-child {
                border-radius: 7px;
            }
        </style>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <script src="build/fzui.js"></script>
        <script type="text/javascript">
            function getColor(id){
                var rgb = getComputedStyle(document.getElementById(id)).backgroundColor.split(',');
                var output = '#';
                output += parseInt(rgb[0].substring(4)).toString(16);
                output += parseInt(rgb[1]).toString(16);
                output += parseInt(rgb[2]).toString(16);
                return output;
            }
        </script>
    </head>
    <body>
        <h1>FZUI!</h1>
        <h2>Colour Pallete</h2>
        <div>
            <h3>Colors</h3>
            {{#colors}}
            <div class="pallete">
                <div class="light-{{name}}-bg" id="light-{{name}}"><script type="text/javascript">document.write(getColor('light-{{name}}'))</script></div>
                <div class="{{name}}-bg" id="normal-{{name}}"><script type="text/javascript">document.write(getColor('normal-{{name}}'))</script></div>
                <div class="dark-{{name}}-bg" id="dark-{{name}}"><script type="text/javascript">document.write(getColor('dark-{{name}}'))</script></div>
                <span>{{name}}</span>
            </div>
            {{/colors}}
        </div>
        <div>
            <h3>Grayscales</h3>
            <div class="pallete">
                <div class="gray-0-bg" id="gray-0"><script type="text/javascript">document.write(getColor('gray-0'))</script></div>
            </div>
            <div class="pallete">
                <div class="gray-1-bg" id="gray-1"><script type="text/javascript">document.write(getColor('gray-1'))</script></div>
            </div>
            <div class="pallete">
                <div class="gray-2-bg" id="gray-2"><script type="text/javascript">document.write(getColor('gray-2'))</script></div>
            </div>
            <div class="pallete">
                <div class="gray-3-bg" id="gray-3"><script type="text/javascript">document.write(getColor('gray-3'))</script></div>
            </div>
            <div class="pallete">
                <div class="gray-4-bg" id="gray-4"><script type="text/javascript">document.write(getColor('gray-4'))</script></div>
            </div>
            <div class="pallete">
                <div class="gray-5-bg" id="gray-5"><script type="text/javascript">document.write(getColor('gray-5'))</script></div>
            </div>
        </div>
        <h2>Buttons</h2>
        <div class="section">
            <div class="half">
                <h3>Colours</h3>
                <button>Default</button>
                <button class='button-red'>Red</button>
                <button class='button-yellow'>Yellow</button>
                <button class='button-blue'>Blue</button>
                <button class='button-green'>Green</button>
                <button class='button-brown'>Brown</button>
                <button class='button-purple'>Purple</button>
            </div>

            <div class="half">
                <h3>Sizes</h3>
                <button class='button-blue button-mini'>Mini</button>
                <button class='button-blue button-small'>Small</button>
                <button class='button-blue'>Default</button>
                <button class='button-blue button-large'>Large</button>
                <button class='button-blue button-mega'>Mega</button>
            </div>
        </div>

        <h2>Dropdown</h2>
        <div class="dropdown">
            <button>Dropdown</button>
            <div class="dropdown-contents">
                Hello!
            </div>
        </div>

        <div class="dropdown">
            <button class="button-red" >Red</button>
            <ul class="dropdown-contents menu">
                <li>Some Item</li>
                <li>Another Item</li>
            </li>
        </div>

        <h2>Button Groups</h2>
        <div class="section">
            <div class="half">
                <div class='button-group'>
                    <button>First</button>
                    <button>Second</button>
                    <button>Third</button>
                    <div class='dropdown'>
                        <button>Nested</button>
                        <ul class='dropdown-contents menu'>
                            <li>Test</li>
                            <li>Another Test</li>
                            <li>Let's go!</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="half">
                <h3>Sizes</h3>
                <div class='button-group button-group-mini'>
                    <button>Mini</button>
                    <button>First</button>
                    <button>Second</button>
                    <button>Third</button>
                    <button>Fourth</button>
                </div><br/>

                <div class='button-group button-group-small'>
                    <button>Small</button>
                    <button>First</button>
                    <button>Second</button>
                    <button>Third</button>
                    <button>Fourth</button>
                </div><br/>

                <div class='button-group'>
                    <button>Normal</button>
                    <button>First</button>
                    <button>Second</button>
                    <button>Third</button>
                    <button>Fourth</button>
                </div><br/>

                <div class='button-group button-group-large'>
                    <button>Large</button>
                    <button>First</button>
                    <button>Second</button>
                    <button>Third</button>
                    <button>Fourth</button>
                </div><br/>

                <div class='button-group button-group-mega'>
                    <button>Mega</button>
                    <button>First</button>
                    <button>Second</button>
                    <button>Third</button>
                    <button>Fourth</button>
                </div>
            </div>
        </div>

        <h2>Tabs and Pills</h2>
        <div class="section">
            <div class="half">
                <ul class="tabs nav nav-small">
                    <li class="active"><a href='#one'>One</a></li>
                    <li><a href='#two'>Two</a></li>
                    <li><a href='#three'>Three</a></li>
                </ul>
                <div class="nav-panel" id="one">
                    Contents of tab #1
                </div>
                <div class="nav-panel" id="two">
                    Contents of tab #2
                </div>
                <div class="nav-panel" id="three">
                    Contents of tab #3
                </div>
            </div>

            <div class="half">
                <ul class="pills pills-vertical nav">
                    <li class="active"><a href='#' onclick='return false'>One</a></li>
                    <li><a href='#' onclick='return false'>Two</a></li>
                    <li><a href='#' onclick='return false'>Three</a></li>
                </ul>
            </div>
        </div>
        <h2>Modals</h2>
        <button onclick='fzui.modal("#modal-test")'>Show Modal</button>
        <div class="modal" id="modal-test">
            This is expected to contain some modal content.
        </div>

        <button onclick='fzui.modal("#modal-test-title", "Should have a title")'>Show Modal</button>
        <div class="modal" id="modal-test-1">
            This is expected to contain some modal content with a title.
        </div>
        

        <h2>Forms</h2>
        <div class="section">
            {{#form-layouts}}
            <div class="half">
                <h3>{{title}}</h3>            
                <form class="{{class}}">
                    <div class="form-element">
                        <label>Text</label>
                        <input type="text" name="username" />
                        <span>A sample text field. Trying to make this description field so long it might try to wrap.</span>
                    </div>

                    <div class="form-element">
                        <label>Password</label>
                        <input type="password" name="username" />
                        <ul>
                            <li>Passwords must contain numbers and letters</li>
                            <li>Choose a strong password</li>
                            <li>Do not use your phone number or date of birth</li>
                        </ul>
                    </div>

                    <div class="form-element">
                        <label>Selection</label>
                        <select>
                            <option></option>
                            <option>Option 1</option>
                            <option>Option 2</option>
                            <option>Option 3</option>
                        </select>
                    </div>

                    <div class="form-element form-error">
                        <label>Error</label>
                        <input type="text" name="error" />
                        <ul>
                            <li>Password fails all the password rules.</li>
                            <li>Can you try a different password.</li>
                        </ul>
                        <span>An errored field</span>
                    </div>

                    <div class="form-element form-warning">
                        <label>Warning</label>
                        <input type="text" name="warning" />
                        <ul>
                            <li>A warning.</li>
                            <li>What do you have to say?</li>
                        </ul>
                    </div>

                    <div class="form-element form-success">
                        <label>Success</label>
                        <input type="text" name="success" />
                        <ul>
                            <li>Seems everything worked well</li>
                        </ul>                        
                    </div>        
                    <div class="form-element">
                        <label>Residential Area</label>
                        <textarea name="residential">Some content please?</textarea>
                    </div>

                    
                    <fieldset>
                        <legend>Personal Information</legend>
                        <div class="form-element">
                            <label>Firstname</label>
                            <input type="text" name="firstname" />
                            <span>A sample text field</span>
                        </div>
                        <div class="form-element">
                            <label>Lastname</label>
                            <input type="text" name="lastname" />
                            <span>A sample text field</span>
                        </div>   
                        <div class="form-element">
                            <label>Food?</label>
                            <div class="check-group">
                                <label><input type="radio" name="hey" /> Burgers and Chips</label>
                                <label><input type="radio" name="hey" /> Pizza and Coke</label>
                                <label><input type="radio" name="hey" /> Tacos</label>
                            </div>
                        </div>
                        <div class="form-element">
                            <label for="check_1_{{class}}">Take Out?</label><input type="checkbox" name="check_1" id="check_1_{{class}}" />        
                        </div>  
                        <div class="form-element">
                            <label>Custom Input Wrapper</label>
                            <div class="input-wrapper">
                                Some generic html inputs can be put inside this wrapper
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-submit-area">
                        <input type="submit" />    
                    </div>

                </form>
            </div>
            {{/form-layouts}}
        </div>
    </body>
</html>
